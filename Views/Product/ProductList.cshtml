@model TechnologySite.ViewModels.ShopViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

    @await Component.InvokeAsync("_UserLayoutDefaultHeadComponentPartial")

<body>
    <!-- Navigation -->
    @await Component.InvokeAsync("_UserLayoutDefaultNavbarComponentPartial")

    <div class="container-fluid">
        <!-- Product List Component -->
        @await Component.InvokeAsync("_UserLayoutProductListComponentPartial", new { model = Model })
    </div>

</body>
</html>

<style>
    body {
        background: linear-gradient(135deg, #ffe0b2, #ffd180, #e1f5fe);
    }
</style>
