@model TechnologySite.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kayıt Ol</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body class="auth-body">

    <div class="auth-wrapper">
        <div class="auth-card">

            <div class="text-center mb-4">
                <i class="fa-solid fa-user-plus auth-icon"></i>
                <h4 class="mt-2">Kayıt Ol</h4>
                <p class="text-muted">Yeni hesap oluştur</p>
            </div>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control form-control-lg" />
                </div>

                <div class="mb-3">
                    <label class="form-label">E-Posta</label>
                    <input asp-for="Email" class="form-control form-control-lg" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Şifre Tekrar</label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                </div>

                <button type="submit" class="btn btn-red w-100">
                    Kayıt Ol
                </button>
            </form>

            <div asp-validation-summary="All" class="text-danger mt-3"></div>

            <div class="text-center mt-4">
                <span class="text-muted">Zaten hesabın var mı?</span><br />
                <a href="/Account/Login" class="auth-link">Giriş Yap</a>
            </div>

        </div>
    </div>

</body>
</html>

<style>
    .auth-body {
        min-height: 100vh;
        background: linear-gradient(135deg, #ffe0b2, #ffd180, #e1f5fe);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .auth-wrapper {
        width: 100%;
        max-width: 420px;
        padding: 15px;
    }

    .auth-card {
        background: #fff;
        padding: 35px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .auth-icon {
        font-size: 42px;
        color: #ef4444;
    }

    .btn-red {
        background: #ef4444;
        color: #fff;
        font-weight: 600;
        border-radius: 30px;
        padding: 12px;
        transition: 0.3s;
    }

        .btn-red:hover {
            background: #b91c1c;
        }

    .auth-link {
        color: #ef4444;
        font-weight: 600;
        text-decoration: none;
    }

        .auth-link:hover {
            text-decoration: underline;
        }
</style>