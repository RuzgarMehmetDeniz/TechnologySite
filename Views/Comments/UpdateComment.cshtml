@using TechnologySite.Entities
@model Contact
@{
	Layout = null;
}

<!DOCTYPE html>

<html lang="en">

@await Component.InvokeAsync("_AdminLayoutHeadComponentPartial")

<body id="page-top">

	<div id="wrapper">

		@await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")

		<div id="content-wrapper" class="d-flex flex-column">

			<div id="content">

				@await Component.InvokeAsync("_AdminLayoutTopNavbarComponentPartial")

				<div class="container-fluid">

					<div class="card">
						<div class="card-body">
							<div class="d-flex align-items-center">
								<h5 class="mb-0">Yorum Güncelleme Sayfası</h5>
							</div>
							<form method="post">

								<input asp-for="ContactID" type="hidden" />

								<label>Ad</label>
								<input asp-for="Name" type="text" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
								<br />

								<label>Soyad</label>
								<input asp-for="Surname" type="text" class="form-control" />
								<span asp-validation-for="Surname" class="text-danger"></span>
								<br />

								<label>Email Adresi</label>
								<input asp-for="Email" type="text" class="form-control" />
								<span asp-validation-for="Email" class="text-danger"></span>
								<br />

								<label>Telefon Numarası</label>
								<input asp-for="Phone" type="text" class="form-control" />
								<span asp-validation-for="Phone" class="text-danger"></span>
								<br />
								<label>Resim</label>
								<input asp-for="Image" type="text" class="form-control" />
								<span asp-validation-for="Image" class="text-danger"></span>
								<br />

								<label>Yorum</label>
								<textarea asp-for="Description" class="form-control" rows="3"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
								<br />

								<button class="btn btn-primary">Yorumu Kaydet</button>

							</form>
						</div>
					</div>

				</div>

			</div>

			<footer class="sticky-footer bg-white">
				<div class="container my-auto">
					<div class="copyright text-center my-auto">
						<span>Copyright &copy; Teknoloji Sayfası  2026</span>
					</div>
				</div>
			</footer>
		</div>
	</div>

	@await Component.InvokeAsync("_AdminLayoutScriptsComponentPartial")

</body>

</html>