@model List<TechnologySite.Entities.About>
@{
Layout = null;
}
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>Freelancer - Start Bootstrap Theme</title>
	<!-- Favicon-->
	<link rel="icon" type="image/x-icon" href="~/startbootstrap-freelancer-gh-pages/assets/favicon.ico" />
	<!-- Font Awesome icons (free version)-->
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<!-- Google fonts-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
	<link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
	<!-- Core theme CSS (includes Bootstrap)-->
	<link href="~/startbootstrap-freelancer-gh-pages/css/styles.css" rel="stylesheet" />
</head>
<!DOCTYPE html>
<html lang="en">
	 @await Component.InvokeAsync("_UserLayoutDefaultHeadComponentPartial")

    @await Component.InvokeAsync("_UserLayoutDefaultNavbarComponentPartial")


<body>
	<br /><br />
	<div class="container text-center">
		<h4 class="text-uppercase mb-4">Hakkımızda</h4>

		@foreach (var item in Model)
		{
			<p class="lead mb-0">@item.Description</p>
			<br />
		}
	</div>
	<br />
	<br />

	<!-- Footer-->
	@await Component.InvokeAsync("_UserLayoutDefaultFooterComponentPartial")

	<!-- Bootstrap core JS-->
	@await Component.InvokeAsync("_UserLayoutDefaultScriptsComponentPartial")

	
</body>
</html>
<style>
	body {
		background: linear-gradient(135deg, #ffe0b2, #ffd180, #e1f5fe);
	}

</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="~/startbootstrap-freelancer-gh-pages/js/scripts.js"></script>
