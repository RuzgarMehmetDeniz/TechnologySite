@using TechnologySite.Entities
@model IndexViewModel

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-black">
                <h1 class="display-4 fw-bolder">Öne Çıkan Ürünlerimiz</h1>
            </div>
        </div>
        <br />
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model.Products)
            {
                <div class="col mb-5">
                    <div class="card h-100 product-card">

                        <div class="d-flex justify-content-center align-items-center pt-3"
                             style="width:200px; height:200px; margin:0 auto;">
                            <img src="@item.Image"
                                 style="max-width:100%; max-height:100%; object-fit:contain;"
                                 alt="Ürün Resmi" />
                        </div>

                        <div class="card-body p-4 text-center">
                            <h5 class="fw-bolder">@item.ProductName</h5>
                            <p>@item.ProductDescription</p>
                            @item.Price ₺
                        </div>



                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn add-to-cart-btn mt-auto" href="/Category/ProductsByCategory/@item.CategoryID">
                                    Sayfada Görüntüle 
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
           
        </div>
    </div>
</section>

<style>
    .product-card {
        background: linear-gradient( 135deg, #ffe0b2, /* turuncu biraz daha belirgin */
        #e1f5fe /* mavi hâlâ hafif */
        ) !important;
        border-radius: 14px;
        border: 1px solid #e0e0e0;
    }

        .product-card:hover {
            transform: translateY(-6px);
            transition: 0.3s ease;
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

    .add-to-cart-btn {
        background: linear-gradient(135deg, #ff9800, #ffb74d);
        color: #fff;
        border: none;
        padding: 10px 22px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 14px;
        box-shadow: 0 6px 15px rgba(255,152,0,0.35);
        transition: all 0.3s ease;
    }

        .add-to-cart-btn:hover {
            background: linear-gradient(135deg, #fb8c00, #ffa726);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(255,152,0,0.45);
        }

        .add-to-cart-btn:active {
            transform: scale(0.96);
        }
</style>
