@using TechnologySite.Entities
@model List<Category>

@{
    int count = 0;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">

        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="bi bi-tags"></i> Kategori Listesi
            </h4>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="text-muted">ID</th>
                        <th class="text-muted">Kategori Adı</th>
                        <th class="text-muted">Açıklama</th>
                        <th class="text-center text-muted">Sil</th>
                        <th class="text-center text-muted">Güncelle</th>
                        <th class="text-center text-muted">Sitede Gör</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="table-row-hover">
                            <td>
                                <span class="badge bg-secondary bg-opacity-75">@count</span>
                            </td>

                            <td class="fw-semibold text-dark">
                                @item.CategoryName
                            </td>
                            <td class="fw-semibold text-dark">
                                @item.CategoryDescription
                            </td>

                            <!-- Sil -->
                            <td class="text-center">
                                <a href="/Category/DeleteCategory/@item.CategoryID"
                                   class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm"
                                   data-bs-toggle="tooltip" title="Sil">
                                    <i class="bi bi-trash-fill me-1"></i> Sil
                                </a>
                            </td>

                            <!-- Güncelle -->
                            <td class="text-center">
                                <a href="/Category/UpdateCategory/@item.CategoryID"
                                   class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm"
                                   data-bs-toggle="tooltip" title="Düzenle">
                                    <i class="bi bi-pencil-square me-1"></i> Düzenle
                                </a>
                            </td>

                            <!-- Sitede Gör -->
                            <td class="text-center">
                                <a href="/Category/CategoryList/"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm"
                                   data-bs-toggle="tooltip" title="Sitede Gör">
                                    <i class="bi bi-eye-fill me-1"></i> Görüntüle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <!-- CTA -->
        <div class="mt-4">
            <a href="/Category/CreateCategory/"
               class="btn btn-lg btn-primary rounded-pill shadow px-4">
                <i class="bi bi-plus-circle me-1"></i> Yeni Kategori Ekle
            </a>
        </div>

    </div>
</div>

<style>
    .table-row-hover:hover {
        background-color: #f8f9fa;
        transition: .2s;
    }
</style>