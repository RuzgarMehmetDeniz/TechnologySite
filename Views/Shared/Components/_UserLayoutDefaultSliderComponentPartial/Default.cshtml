@model List<TechnologySite.Entities.Slider>

<div class="container my-5">
    <h4 class="mb-3">Çok Satanlar</h4>

    <div class="slider-box">
        <button class="slider-btn prev-btn">&#8249;</button>

        <div class="slider-track">

            @foreach (var item in Model)
            {
                <div class="slider-item">
                    <div class="card product-card">
                        <img src="@item.Product.Image" alt="@item.Product.ProductName" />

                        <div class="card-body d-flex flex-column">
                            <h6 class="text-truncate">@item.Product.ProductName</h6>
                            <p class="text-success fw-bold mt-auto">
                                @item.Product.Price.ToString("N0") ₺
                            </p>
                        </div>
                        <div class="card-footer p-2 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn add-to-cart-btn mt-auto" href="/Category/ProductsByCategory/@item.Product.CategoryID">
                                    Sayfada Görüntüle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <button class="slider-btn next-btn">&#8250;</button>
    </div>
</div>

<style>
    .slider-box {
        position: relative;
        overflow: hidden;
    }

    .slider-track {
        display: flex;
        gap: 15px;
        overflow-x: auto;
        scroll-behavior: smooth;
        padding-bottom: 10px;
    }

        .slider-track::-webkit-scrollbar {
            display: none;
        }

    .slider-item {
        flex: 0 0 220px;
        height: 320px; /* tüm cardlar aynı yükseklikte */
    }

    .product-card {
        display: flex;
        flex-direction: column;
        height: 100%;
        border: none;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
        text-align: center;
        transition: transform 0.3s ease;
    }

        .product-card:hover {
            transform: scale(1.04);
        }

        .product-card img {
            width: 100%;
            height: 160px;
            object-fit: contain;
        }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-footer {
        margin-top: auto;
    }

    .slider-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: #007bff;
        color: #fff;
        border: none;
        width: 40px;
        height: 40px;
        font-size: 24px;
        border-radius: 50%;
        cursor: pointer;
        z-index: 1;
    }

    .prev-btn {
        left: 0;
    }

    .next-btn {
        right: 0;
    }
</style>

<script>
    const track = document.querySelector(".slider-track");
    const nextBtn = document.querySelector(".next-btn");
    const prevBtn = document.querySelector(".prev-btn");

    const slideWidth = 235; // item genişliği + gap

    nextBtn.addEventListener("click", () => {
        track.scrollBy({ left: slideWidth, behavior: "smooth" });
    });

    prevBtn.addEventListener("click", () => {
        track.scrollBy({ left: -slideWidth, behavior: "smooth" });
    });
</script>
