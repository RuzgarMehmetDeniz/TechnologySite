@using TechnologySite.Entities
@model List<Product>

@{
	var currentPage = (int)ViewData["CurrentPage"];
	var pageSize = (int)ViewData["PageSize"];
	var totalCount = (int)ViewData["TotalCount"];
	var totalPages = (int)Math.Ceiling(totalCount / (double)pageSize);

	int count = (currentPage - 1) * pageSize;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="card shadow-sm border-0 rounded-4">
	<div class="card-body">

		<!-- Header -->
		<div class="d-flex align-items-center mb-3">
			<h4 class="fw-bold mb-0 text-primary">
				<i class="bi bi-tags"></i> Ürün Listesi
			</h4>
		</div>

		<!-- Table -->
		<div class="table-responsive">
			<table class="table table-hover align-middle mb-0">
				<thead class="bg-light border-bottom">
					<tr>
						<th class="text-muted">ID</th>
						<th class="text-muted">Ürün Adı</th>
						<th class="text-muted">Fiyat</th>
						<th class="text-muted">Kategorisi</th>
						<th class="text-center text-muted">Sil</th>
						<th class="text-center text-muted">Güncelle</th>
						<th class="text-center text-muted">Sitede Gör</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr class="table-row-hover">
							<td>
								<span class="badge bg-secondary bg-opacity-75">@count</span>
							</td>

							<td class="fw-semibold text-dark">
								@item.ProductName
							</td>
							<td class="fw-semibold text-dark">
								@item.Price
							</td>
							<td class="fw-semibold text-dark">
								@item.Category.CategoryName
							</td>

							<!-- Sil -->
							<td class="text-center">
								<a href="/Product/DeleteProduct/@item.ProductID"
								   class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm"
								   data-bs-toggle="tooltip" title="Sil">
									<i class="bi bi-trash-fill me-1"></i> Sil
								</a>
							</td>

							<!-- Güncelle -->
							<td class="text-center">
								<a href="/Product/UpdateProduct/@item.ProductID"
								   class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm"
								   data-bs-toggle="tooltip" title="Düzenle">
									<i class="bi bi-pencil-square me-1"></i> Düzenle
								</a>
							</td>

							<!-- Sitede Gör -->
							<td class="text-center">
								<a href="/Category/ProductsByCategory/@item.ProductID"
								   target="_blank"
								   class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm"
								   data-bs-toggle="tooltip" title="Sitede Gör">
									<i class="bi bi-eye-fill me-1"></i> Görüntüle
								</a>
							</td>
						</tr>
					}
				</tbody>

			</table>
		</div>

		<!-- CTA -->
		<div class="mt-4">
			<a href="/Product/AddProduct/"
			   class="btn btn-lg btn-primary rounded-pill shadow px-4">
				<i class="bi bi-plus-circle me-1"></i> Yeni Ürün Ekle
			</a>
		</div>

	</div>
</div>
<!-- Pagination -->
@if (totalPages > 1)
{
	<nav class="mt-4">
		<ul class="pagination justify-content-center">

			<li class="page-item @(currentPage == 1 ? "disabled" : "")">
				<a class="page-link"
				   href="@Url.Action("Index", new { page = currentPage - 1 })">
					<i class="bi bi-chevron-left"></i>
				</a>
			</li>

			@for (int i = 1; i <= totalPages; i++)
			{
				<li class="page-item @(currentPage == i ? "active" : "")">
					<a class="page-link"
					   href="@Url.Action("Index", new { page = i })">
						@i
					</a>
				</li>
			}

			<li class="page-item @(currentPage == totalPages ? "disabled" : "")">
				<a class="page-link"
				   href="@Url.Action("Index", new { page = currentPage + 1 })">
					<i class="bi bi-chevron-right"></i>
				</a>
			</li>

		</ul>
	</nav>

}
<!-- /Pagination -->


<style>
	.table-row-hover:hover {
		background-color: #f8f9fa;
		transition: .2s;
	}
</style>