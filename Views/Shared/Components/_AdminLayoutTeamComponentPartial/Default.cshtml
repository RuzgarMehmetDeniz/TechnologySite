@using TechnologySite.Entities
@model List<Team>

@{
    int count = 0;
    bool hasAboutContent = Model != null && Model.Any();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">

        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="bi bi-tags"></i> Destek Ekibimiz
            </h4>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="text-muted">ID</th>
                        <th class="text-muted">Ad Soyad</th>
                        <th class="text-muted">Unvan</th>
                        <th class="text-muted">Resim</th>
                        <th class="text-muted">Instagram</th>
                        <th class="text-muted">Twitter</th>
                        <th class="text-muted">LınkedIn</th>
                        <th class="text-center text-muted">Sil</th>
                        <th class="text-center text-muted">Güncelle</th>
                        <th class="text-center text-muted">Sitede Gör</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="table-row-hover">
                            <td>
                                <span class="badge bg-secondary bg-opacity-75">@count</span>
                            </td>
                            <td class="fw-semibold text-dark"> @item.Name @item.Surname </td>
                            <td class="fw-semibold text-dark"> @item.Description </td>
                            <td class="fw-semibold text-dark"> @item.Image </td>
                            <td class="fw-semibold text-dark"> @item.InstagramUrl </td>
                            <td class="fw-semibold text-dark"> @item.XUrl </td>
                            <td class="fw-semibold text-dark"> @item.LınkedInUrl </td>
                            <!-- Sil -->
                            <td class="text-center">
                                <a href="/Team/DeleteTeam/@item.ID" class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm" data-bs-toggle="tooltip" title="Sil">
                                    <i class="bi bi-trash-fill me-1"></i> Sil
                                </a>
                            </td>
                            <!-- Güncelle -->
                            <td class="text-center">
                                <a href="/Team/UpdateTeam/@item.ID" class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm" data-bs-toggle="tooltip" title="Düzenle">
                                    <i class="bi bi-pencil-square me-1"></i> Güncelle
                                </a>
                            </td>
                            <!-- Sitede Gör -->
                            <td class="text-center">
                                <a href="/Team/TeamIndex/@item.ID" target="_blank" class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm" data-bs-toggle="tooltip" title="Sitede Gör">
                                    <i class="bi bi-eye-fill me-1"></i> Görüntüle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- CTA -->
        <div class="mt-4">

            @if (!hasAboutContent)
            {
                <!-- Aktif -->
                <a href="/About/CreateAbout/"
                   class="btn btn-lg btn-primary rounded-pill shadow px-4">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Personel Ekle
                </a>
            }
            else
            {
                <!-- Pasif -->
                <button class="btn btn-lg btn-secondary rounded-pill px-4" disabled>
                    <i class="bi bi-lock-fill me-1"></i> Yeni Personel Ekle
                </button>

                <!-- Info -->
                <div class="alert alert-info mt-3 d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                    <div>
                        <strong>Bilgilendirme:</strong><br />
                        Personel sayfası için yalnızca <b>1 adet içerik</b> tanımlanabilir.
                        Mevcut içeriği <b>Düzenle</b> butonu ile güncelleyebilirsiniz.
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
    .table-row-hover:hover {
        background-color: #f8f9fa;
        transition: .2s;
    }
</style>
