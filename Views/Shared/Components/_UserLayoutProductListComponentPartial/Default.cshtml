@model TechnologySite.ViewModels.ShopViewModel

<div class="container mt-4">
    <div class="row">
        <!-- Sol Kategori Menüsü -->
        <div class="col-md-3 position-relative">
            <ul class="list-group category-menu">
                @foreach (var cat in Model.Categories)
                {
                    <li class="list-group-item category-item">
                        <span class="category-title">
                            @cat.CategoryName
                            <span class="float-end">›</span>
                        </span>

                        <!-- Mega Menu -->
                        <div class="mega-menu">
                            <div class="row">
                                @if (cat.Products != null && cat.Products.Count > 0)
                                {
                                    foreach (var prod in cat.Products)
                                    {
                                        <div class="col-md-4 mb-2">
                                            <a class="product-link"
                                               href="@Url.Action("ProductList", "Product", new { categoryId = cat.CategoryID })">
                                                @prod.ProductName
                                            </a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Bu kategoride ürün yok</span>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <!-- Sağ Ürün Listesi -->
        <div class="col-md-9">
            <h4 class="mb-3">
                @(Model.SelectedCategoryId == null ? "Tüm Ürünler" : "Kategori Ürünleri")
            </h4>

            <div class="row">
                @if (Model.Products != null && Model.Products.Count > 0)
                {
                    foreach (var product in Model.Products)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-img-container">
                                    <img src="@product.Image"
                                         class="card-img-top"
                                         alt="@product.ProductName" />
                                </div>

                                <div class="card-body">
                                    <h6 class="card-title">@product.ProductName</h6>
                                    <p class="card-text text-muted">@product.Price ₺</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Gösterilecek ürün yok.</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Sol Kategori Menüsü */
    .category-menu {
        border: 1px solid #ddd;
    }

    .category-item {
        cursor: pointer;
        position: relative;
        padding: 12px 15px;
        font-weight: 500;
    }

        .category-item:hover {
            background-color: #f5f5f5;
            color: #ff6600;
        }

    /* Mega Menu */
    .mega-menu {
        display: none;
        position: absolute;
        top: 0;
        left: 100%;
        width: 750px;
        background: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        min-height: 100%;
        z-index: 9999;
    }

    .category-item:hover .mega-menu {
        display: block;
    }

    /* Ürün Linkleri */
    .product-link {
        display: block;
        font-size: 13px;
        color: #333;
        text-decoration: none;
    }

        .product-link:hover {
            color: #ff6600;
            text-decoration: underline;
        }

    /* Ürün Kartı Resimleri - Eşit ve Responsive */
    .card-img-container {
        width: 100%;
        aspect-ratio: 1/1; /* Kare yapmak için */
        overflow: hidden;
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi kırpar ama kartı doldurur */
        object-position: center;
        display: block;
    }

    /* Card Düzeni */
    .card {
        border: 1px solid #ddd;
        border-radius: 6px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.03);
        }
</style>
