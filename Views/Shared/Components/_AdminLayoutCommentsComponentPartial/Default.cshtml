@using TechnologySite.Entities
@model List<Contact>
@{
    int count = 0;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">

        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="bi bi-tags"></i> Kullanıcı Yorumları 
            </h4>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="text-muted">ID</th>
                        <th class="text-muted">Ad Soyad</th>
                        <th class="text-muted">Email</th>
                        <th class="text-muted">Telefon</th>
                        <th class="text-muted">Resim</th>
                        <th class="text-muted">Oluşturulma Tarihi</th>
                        <th class="text-muted">Yorum</th>
                        <th class="text-center text-muted">Sil</th>
                        <th class="text-center text-muted">Güncelle</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="table-row-hover">
                            <td>
                                <span class="badge bg-secondary bg-opacity-75">@count</span>
                            </td>

                            <td class="fw-semibold text-dark">
                                @item.Name @item.Surname
                            </td>
                            <td class="fw-semibold text-dark">
                                @item.Email
                            </td>
                            <td class="fw-semibold text-dark">
                                @item.Phone
                            </td>
                            <td class="fw-semibold text-dark">
                                @item.Image.Substring(0, Math.Min(10, item.Image.Length))
                            </td>
                            <td class="fw-semibold text-dark">
                                @item.CreateDate.ToString("dd.MMM.yyyy")
                            </td>
                            <td class="fw-semibold text-dark">
                                @item.Description
                            </td>

                            <!-- Sil -->
                            <td class="text-center">
                                <a href="/Comments/DeleteComment/@item.ContactID"
                                   class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm"
                                   data-bs-toggle="tooltip" title="Sil">
                                    <i class="bi bi-trash-fill me-1"></i> Sil
                                </a>
                            </td>

                            <!-- Güncelle -->
                            <td class="text-center">
                                <a href="/Comments/UpdateComment/@item.ContactID"
                                   class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm"
                                   data-bs-toggle="tooltip" title="Düzenle">
                                    <i class="bi bi-pencil-square me-1"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

        <!-- CTA -->
        <div class="mt-4">
            <a href="/Comments/CreateComment/"
               class="btn btn-lg btn-primary rounded-pill shadow px-4">
                <i class="bi bi-plus-circle me-1"></i> Yeni Yorum Ekle
            </a>
        </div>

    </div>
</div>

<style>
    .table-row-hover:hover {
        background-color: #f8f9fa;
        transition: .2s;
    }
</style>