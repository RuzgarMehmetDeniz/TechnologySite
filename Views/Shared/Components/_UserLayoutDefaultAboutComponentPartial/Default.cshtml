@using TechnologySite.Entities
@model List<Contact>
@await Component.InvokeAsync("_UserLayoutDefaultAboutHeaderComponentPartial")
<section class="page-section" id="about">
	<div class="container">
		<div class="text-center">
			<h2 class="section-heading text-uppercase">Yorumlar</h2>
		</div>


		<ul class="timeline">
			@{
				int index = 0;
			}

			@foreach (var item in Model)
			{
				// i tek ise "timeline-inverted" ekle
				var invertedClass = (index % 2 == 1) ? "timeline-inverted" : "";

				<li class="@invertedClass">
					<div class="timeline-image">
							<img src="@item.Image" alt="..." />
					</div>

					<div class="timeline-panel">
						<div class="timeline-heading">
							<h4>@item.CreateDate.ToString("dd-MM-yyyy")</h4>
							<h4 class="subheading">@item.Name @item.Surname</h4>
						</div>

						<div class="timeline-body">
							<p class="text-muted">@item.Description</p>
						</div>
					</div>
				</li>

				index++;
			}
		</ul>
	</div>
</section>
@await Component.InvokeAsync("_UserLayoutDefaultAboutScriptComponentPartial")

<style>
	/* Timeline image kapsayıcısı */
	.timeline > li .timeline-image {
		width: 100px;
		height: 100px;
		margin-left: -50px;
		top: 0;
		display: flex;
		align-items: center;
		justify-content: center;
	}

		/* Yuvarlak çerçeve */
		.timeline > li .timeline-image img {
			width: 100px;
			height: 100px;
			border-radius: 50%;
			border: 4px solid #FFD700;
			object-fit: cover;
			display: block;
		}

</style>